<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.EditEmployee.Editemployee">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEmpno"
        android:hint="Enter employee No"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnsearch"
        android:layout_margin="10dp"
        android:hint="Search"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etempname"
        android:textSize="20dp"
        android:hint="Employee Name"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etempsalary"
        android:textSize="20dp"
        android:hint="Employee salary"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etempage"
        android:textSize="20dp"
        android:hint="Employee Age"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnupdate"
        android:layout_margin="10dp"
        android:hint="Update"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btndelete"
        android:layout_margin="10dp"
        android:hint="Delete"
        android:textSize="20dp"
        android:textStyle="bold"/>



</LinearLayout>